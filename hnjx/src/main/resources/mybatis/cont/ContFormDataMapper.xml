<mapper namespace="com.cloudht.cont.dao.ContFormDataDao">

	<select id="get" resultType="com.cloudht.cont.domain.ContFormDataDO">
		select `cont_form_data_id`,`cont_form_id`,`title`,`value`,`title_style`,`input_style`,`create_by`,`gmt_create`,`gmt_modified` from cont_form_data where cont_form_data_id = #{value}
