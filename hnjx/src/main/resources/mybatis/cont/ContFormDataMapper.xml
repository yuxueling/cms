	<select id="list" resultType="com.cloudht.cont.domain.ContFormDataDO">
		select `cont_form_data_id`,`cont_form_id`,`title`,`value`,`title_style`,`input_style`,`create_by`,`gmt_create`,`gmt_modified` from cont_form_data
        <where>  
		  		  <if test="contFormDataId != null and contFormDataId != ''"> and cont_form_data_id = #{contFormDataId} </if>
		  		  <if test="contFormId != null and contFormId != ''"> and cont_form_id = #{contFormId} </if>
