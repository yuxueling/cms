		  		  <if test="value != null and value != ''"> and value = #{value} </if>
		  		  <if test="titleStyle != null and titleStyle != ''"> and title_style = #{titleStyle} </if>
		  		  <if test="inputStyle != null and inputStyle != ''"> and input_style = #{inputStyle} </if>
		  		  <if test="createBy != null and createBy != ''"> and create_by = #{createBy} </if>
		  		  <if test="gmtCreate != null and gmtCreate != ''"> and gmt_create = #{gmtCreate} </if>
		  		  <if test="gmtModified != null and gmtModified != ''"> and gmt_modified = #{gmtModified} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.cloudht.cont.domain.ContFormDataDO" useGeneratedKeys="true" keyProperty="contFormDataId">
		insert into cont_form_data
		(
			`cont_form_id`, 
			`title`, 
			`value`, 
			`title_style`, 
			`input_style`, 
			`create_by`, 
			`gmt_create`, 
			`gmt_modified`
		)
		values
		(
			#{contFormId}, 
			#{title}, 
			#{value}, 
			#{titleStyle}, 
			#{inputStyle}, 
			#{createBy}, 
			#{gmtCreate}, 
			#{gmtModified}
		)
	</insert>
	 
	<update id="update" parameterType="com.cloudht.cont.domain.ContFormDataDO">
		update cont_form_data 
		<set>
			<if test="contFormId != null">`cont_form_id` = #{contFormId}, </if>
			<if test="title != null">`title` = #{title}, </if>
			<if test="value != null">`value` = #{value}, </if>
