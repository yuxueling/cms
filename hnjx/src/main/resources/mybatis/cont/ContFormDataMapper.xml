		delete from cont_form_data where cont_form_data_id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from cont_form_data where cont_form_data_id in 
		<foreach item="contFormDataId" collection="array" open="(" separator="," close=")">
			#{contFormDataId}
		</foreach>
	</delete>

